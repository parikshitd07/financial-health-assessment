# Database Configuration
DATABASE_URL=postgresql://financialhealth:password@localhost:5432/financial_health_db
DATABASE_ENCRYPTION_KEY=your-32-character-encryption-key-here-change-this

# AI/LLM API Keys (Use one or more)
# Primary: Google Gemini 3 Flash (Recommended - Fast & Cost-Effective)
GEMINI_API_KEY=your-gemini-api-key-here
AI_MODEL=gemini-3-flash-preview  # gemini-3-flash-preview, gemini-3-pro-preview, gpt-4, claude-3-opus
GEMINI_THINKING_LEVEL=medium  # minimal, low, medium, high (Gemini only)

# Fallback Options
OPENAI_API_KEY=sk-your-openai-api-key-here
CLAUDE_API_KEY=your-claude-api-key-here

# Banking APIs (Max 2)
# Plaid Integration
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENVIRONMENT=sandbox  # sandbox, development, or production

# Razorpay Integration
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# GST API Integration
GST_API_KEY=your-gst-api-key
GST_API_URL=https://api.gst.gov.in
GST_USERNAME=your-gst-username
GST_PASSWORD=your-gst-password

# Security
JWT_SECRET_KEY=your-super-secret-jwt-key-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption
ENCRYPTION_KEY=your-fernet-encryption-key-here
AES_ENCRYPTION_KEY=your-aes-256-key-here

# Application Settings
APP_NAME=Financial Health Assessment Tool
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development  # development, staging, production
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@financialhealth.com

# File Upload Settings
MAX_UPLOAD_SIZE_MB=50
ALLOWED_EXTENSIONS=csv,xlsx,pdf
UPLOAD_FOLDER=./uploads

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENV=development

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Background Jobs
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
